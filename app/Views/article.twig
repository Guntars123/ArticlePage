{% extends "layout.twig" %}

{% block content %}
    <h1>{{ article.title }}</h1>
    {% if article is empty %}
        <h1>Something went wrong. No results found. Please try again!</h1>
    {% else %}
        <div class="article">
            <p>By :
                <a href="/user/{{ article.userId }}"> {{ users|filter(user => user.id == article.userId)|first.username }}</a>
            </p>
            <img src="https://placehold.co/800x500" alt="Article Image">
            <p>{{ article.body }}</p>
        </div>
        <div class="comments">
            <h1>Comments:</h1>
            {% for comment in comments|filter(comment => comment.postId == article.id) %}
                <div class="comment">
                    <p><strong>Name: </strong>{{ comment.name }}</p>
                    <p><strong>Email: </strong>{{ comment.email }}</p>
                    <p>{{ comment.body }}</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}