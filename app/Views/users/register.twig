{% extends "layout.twig" %}

{% block content %}
    <div class="center-container">
        <h1 class="title">Register</h1>
        <form class="register" action="/register" method="POST">
            <div class="register-group">
                <label for="user_name">User Name:</label>
                <input type="text" id="user_name" name="user_name" value="{{ user.user_name }}" placeholder="Joe"
                       required>
            </div>
            <div class="register-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="{{ user.email }}" placeholder="joe@example.com"
                       required>
                {% if session.errors.email %}
                    <p class="error">{{ session.errors.email[0] }}</p>
                {% endif %}
            </div>
            <div class="register-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" value="{{ user.password }}" placeholder="*******"
                       required>
                {% if session.errors.password %}
                    <p class="error">{{ session.errors.password[0] }}</p>
                {% endif %}
            </div>
            <div class="register-group">
                <label for="password_repeat">Password repeat:</label>
                <input type="password" id="password_repeat" name="password_repeat" placeholder="*******" required>
                {% if session.errors.password %}
                    <p class="error">{{ session.errors.password[0] }}</p>
                {% endif %}
            </div>
            <div class="register-group">
                <input type="submit" value="Register">
            </div>
            <div class="link-sign-in">
                Already registered? <a href="/login">Sign In</a>
            </div>
        </form>
    </div>
{% endblock %}