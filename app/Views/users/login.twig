{% extends "layout.twig" %}

{% block content %}
    <div class="center-container">
        <h1 class="title">Sign In</h1>
        <form class="register" action="/login" method="POST">
            <div class="register-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="{{ user.email }}" placeholder="joe@example.com"
                       required>
            </div>
            <div class="register-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" value="{{ user.password }}" placeholder="*******"
                       required>
            </div>
            <div class="register-group">
                <input type="submit" value="Sign In">
            </div>
            <div class="link-sign-in">
                Not registered? <a href="/register">Register</a>
            </div>
        </form>
    </div>
{% endblock %}